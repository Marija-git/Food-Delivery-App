<link rel="stylesheet" href="~/CSS/profil2.css" type="text/css" />
@model Dostava_projekat.Models.Korisnik
@{
    ViewBag.Title = "Profil";
}

<form action="~/Korisnik/IzmeniProfil" method="post"> <span>Update your profile</span>
    <table>
      
        <tr>
            <td><input type="email" name="email" value="@Model.Email" placeholder="email" /></td>
        </tr>
        <tr>
            <td><input type="text" name="lozinka" value="@Model.Lozinka" placeholder="password"/> </td>
        </tr>
        <tr>
            <td><input type="text" name="ime" value="@Model.Ime" placeholder="name" /> </td>
        </tr>
        <tr>
            <td><input type="text" name="prezime" value="@Model.Prezime" placeholder="surname" /> </td>
        </tr>
       
        <tr>
            <td><input type="date" name="DatumRodjenja" value="@Model.DatumRodjenja.ToString("yyyy-MM-dd")" placeholder="date of birth"/> </td>
        </tr>
        <tr>
            <td><input type="text" name="adresa" value="@Model.Adresa"  placeholder="address"/></td>
        </tr>

        <tr>
            <td>
                <label for="imgPath">Add picture</label>
                <input type="file" id="imgPath" name="imgPath" accept="image/*" />
            </td>
        </tr>

        <tr>
            <td>
                <input id="sbm" type="submit" value="izmeni" />
                <input id="sbm" type="hidden" name="KorisnickoIme" value="@Model.KorisnickoIme" />
            </td>
        </tr>


    </table>
</form>
